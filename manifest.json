{
    "manifest_version": 2,
    "name": "YouTube Cinema Mode",
    "version": "1.0",
    "description": "Sets Default mode of the YouTube Video to Cinema Mode",
    "permissions": ["activeTab", "storage"],
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "icons": {
        "48": "icon.png"
    },
    "content_scripts": [
        {
        "matches": ["https://www.youtube.com/*"],
        "js": ["content.js"]
        }
    ]
}
